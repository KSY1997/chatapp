<%= form_with(model: message, id: "message_form", method: :post, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#clearInput"}, class: "search-form flex-grow-1 me-2") do |form| %>
  <%= form.text_field :body, id: "chat-input", class: "form-control rounded-pill", data: { reset_form_target: "input"}, placeholder: "Type a message..." %>
  <%= form.button class: "btn btn-primary btn-icon rounded-circle" do %>
    <i data-feather="send"></i>
  <% end %>
<% end %>