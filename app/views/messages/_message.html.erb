<%= turbo_frame_tag dom_id(message) do %>
  <div class="message-item">
    <div class="content">
      <div class="message">
        <div class="bubble">
          <%= message.body %>
          <%= turbo_frame_tag [dom_id(message), "controls"] do %>
            <% if display_controls %>
              <%= render partial: "messages/controls", locals: { message: message } %>
            <% end %>
          <% end %>
        </div>
        <%= message.created_at.strftime("%H:%M") %>
      </div>
    </div>
  </div>
<% end %>