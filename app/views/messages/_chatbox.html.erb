<%= turbo_stream_from "messages" %>
<div class="chat-body ps ps--active-y" data-controller="chat" data-chat-current-user-id-value="<%= current_user.id %>">
  <div class="messages" id="messages">
    <% @messages.each do |message| %>
      <%= render partial: "messages/message", locals: { message: message, display_controls: message.user == current_user} %>    
    <% end %>
  </div>
</div>